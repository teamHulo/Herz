<div class="section-our">
  <div class="container">
    <div class="section-our__wrap">
      <div class="slider-btns-body">
        <div class="slider-btns">
            <div class="swiper-btns">
                <div class="swiper-button-prev-our swiper-btn " data-btn="swiper-button-prev-our-{{section.id}}">
                    <svg width="37" height="9" viewBox="0 0 37 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                         <path d="M36.3535 4.85355C36.5488 4.65829 36.5488 4.34171 36.3535 4.14644L33.1716 0.964463C32.9763 0.769201 32.6597 0.769201 32.4645 0.964463C32.2692 1.15973 32.2692 1.47631 32.4645 1.67157L35.2929 4.5L32.4645 7.32842C32.2692 7.52369 32.2692 7.84027 32.4645 8.03553C32.6597 8.23079 32.9763 8.23079 33.1716 8.03553L36.3535 4.85355ZM0.636688 5L36 5L36 4L0.636688 4L0.636688 5Z" fill="#828071"/>
                    </svg>
                </div>
                <div class="swiper-pagination-our swiper-btn" data-btn="swiper-pagination-our-{{section.id}}"></div>
                
                <div class="swiper-button-next-our swiper-btn " data-btn="swiper-button-next-our-{{section.id}}">
                    <svg width="37" height="9" viewBox="0 0 37 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                         <path d="M36.3535 4.85355C36.5488 4.65829 36.5488 4.34171 36.3535 4.14644L33.1716 0.964463C32.9763 0.769201 32.6597 0.769201 32.4645 0.964463C32.2692 1.15973 32.2692 1.47631 32.4645 1.67157L35.2929 4.5L32.4645 7.32842C32.2692 7.52369 32.2692 7.84027 32.4645 8.03553C32.6597 8.23079 32.9763 8.23079 33.1716 8.03553L36.3535 4.85355ZM0.636688 5L36 5L36 4L0.636688 4L0.636688 5Z" fill="#828071"/>
                    </svg>
                </div>
            </div>
        </div>
      </div>

      <div class="name scroll-trigger animate--slide-in" style="--animation-order: 0;">
        <span>
          {{ section.settings.name }}
        </span>
      </div>
      <div class="title scroll-trigger animate--slide-in" style="--animation-order: 0;">
        <h2>
          {{ section.settings.title }}
        </h2>
      </div>
      <div class="section-our__list swiper" data-swiper="section-our__list-{{section.id}}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="slide__wrap">
                <div class="image">
                  <div class="image__wrap">
                    <img src="{{block.settings.img | img_url: "master"}}" alt="">
                  </div>

                </div>
                <div class="title scroll-trigger animate--slide-in" style="--animation-order: 0;">
                  <h3>
                    {{ block.settings.title }}
                  </h3>
                </div>
                <div class="text scroll-trigger animate--slide-in" style="--animation-order: 0;">
                  {{ block.settings.text }}
                </div>
                <div class="slide-btn scroll-trigger animate--slide-in" style="--animation-order: 0;">
                  <a href="{{block.settings.url}}" class="a-btn">
                    {{ block.settings.btn_name }}</a>
                </div>
              </div>
            </div>
          {% endfor %}

        </div>

      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "section-our-recommend",
    "settings": [
      {
        "type": "text",
        "id": "name",
        "label": "name"
      }, {
        "type": "text",
        "id": "title",
        "label": "title"
      }
    ],
    "blocks": [
      {
        "name": "slide",
        "type": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "title"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "text detail"
          },
          {
            "type": "url",
            "id": "url",
            "label": "url"
          }, {
            "type": "text",
            "id": "btn_name",
            "label": "btn name",
            "default": "Read more"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "section-our-recommend"
      }
    ]
  }
{% endschema %}