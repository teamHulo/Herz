<div class="banner-slider">
  <div class="container">
    <div class="banner-slider__wrap">
      <div class="swiper bannerSwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="slide__wrap">
                <div class="left">
                  <div class="left__wrap">
                    <div class="title scroll-trigger animate--slide-in" style="--animation-order: 0;">
                      <h1 >
                        {{ block.settings.title }}
                      </h1>
                    </div>
                    <div class="text scroll-trigger animate--slide-in" style="--animation-order: 0;">
                      {{ block.settings.text }}
                    </div>
                    {% if block.settings.url != blank %}
                      <div class="item-btn scroll-trigger animate--slide-in" style="--animation-order: 0;">
                        <a href="{{block.settings.url}}" class="a-btn">{{ block.settings.btn_name }}</a>
                      </div>
                    {% endif %}
                  </div>
                </div>
                <div class="right">
                  <div class="right__wrap">
                    <div class="image__wrap">
                      {% if block.settings.img1 != blank %}
                        <div class="image1">
                          <img src="{{block.settings.img1 | img_url: 'master'}}" alt="">
                        </div>
                      {% endif %}
                      {% if block.settings.img2 != blank %}
                        <div class="image2">
                          <img src="{{block.settings.img2 | img_url: 'master'}}" alt="">
                        </div>
                      {% endif %}
                      {% if block.settings.img3 != blank %}
                        <div class="image3">
                          <img src="{{block.settings.img3 | img_url: 'master'}}" alt="">
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-btns">
            <div class="swiper-button-prev swiper-btn btn-none">
                <svg width="37" height="9" viewBox="0 0 37 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                     <path d="M36.3535 4.85355C36.5488 4.65829 36.5488 4.34171 36.3535 4.14644L33.1716 0.964463C32.9763 0.769201 32.6597 0.769201 32.4645 0.964463C32.2692 1.15973 32.2692 1.47631 32.4645 1.67157L35.2929 4.5L32.4645 7.32842C32.2692 7.52369 32.2692 7.84027 32.4645 8.03553C32.6597 8.23079 32.9763 8.23079 33.1716 8.03553L36.3535 4.85355ZM0.636688 5L36 5L36 4L0.636688 4L0.636688 5Z" fill="#828071"/>
                </svg>
            </div>
            <div class="swiper-pagination swiper-btn"></div>
            
            <div class="swiper-button-next swiper-btn btn-none">
                <svg width="37" height="9" viewBox="0 0 37 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                     <path d="M36.3535 4.85355C36.5488 4.65829 36.5488 4.34171 36.3535 4.14644L33.1716 0.964463C32.9763 0.769201 32.6597 0.769201 32.4645 0.964463C32.2692 1.15973 32.2692 1.47631 32.4645 1.67157L35.2929 4.5L32.4645 7.32842C32.2692 7.52369 32.2692 7.84027 32.4645 8.03553C32.6597 8.23079 32.9763 8.23079 33.1716 8.03553L36.3535 4.85355ZM0.636688 5L36 5L36 4L0.636688 4L0.636688 5Z" fill="#828071"/>
                </svg>
            </div>
        </div>
        
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "section-banner-slider",

    "blocks": [
      {
        "name": "slide",
        "type": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "img1",
            "label": "Image left"
          },
          {
            "type": "image_picker",
            "id": "img2",
            "label": "Image center"
          },
          {
            "type": "image_picker",
            "id": "img3",
            "label": "Image rigth"
          },
          {
            "type": "text",
            "id": "title",
            "label": "title"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "text detail"
          }, {
            "type": "url",
            "id": "url",
            "label": "url"
          }, {
            "type": "text",
            "id": "btn_name",
            "label": "btn name",
            "default": "LEarn more"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "section-banner-slider"
      }
    ]
  }
{% endschema %}