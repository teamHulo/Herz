    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom spacing",
      "min": 0,
      "max": 80,
      "default": 0,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Mailchimp Form"
    }
  ]
}

{% endschema %}
