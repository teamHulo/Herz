{% assign metaObject = product.metafields.custom.tab_3.value %}
<div class="product__tabs">
  <div class="product__tabs-wrap">
    <div class="tabs__header">
      <ul>
        {% if product.metafields.custom.product_short_description != blank %}
          <li class="active">Beschreibung</li>
        {% endif %}
        {% if product.metafields.custom.spezifikation_material != blank or product.metafields.custom.spezifikation_inhalt != blank or product.metafields.custom.spezifikation_passform != blank %}
          <li>Spezifikation</li>
        {% endif %}
        {% if product.metafields.custom.tab_2 != blank %}
          <li>Pflegehinweise</li>
        {% endif %}
        {% if product.metafields.custom.philosophie != blank %}
          <li> <img src="https://cdn.shopify.com/s/files/1/0837/0719/9803/files/Symbol.png?v=1697587432" alt=""> Philosophie</li>
        {% endif %}
        {% comment %}<li>
Versand & RÃ¼cksendung</li> {% endcomment %}
      
      </ul>
    </div>
    <div class="tab_content">
      {% if product.metafields.custom.product_short_description != blank %}
        <div class="tab-1 tab active">
          {{ product.metafields.custom.product_short_description | metafield_tag }}
        </div>
      {% endif %}
      {% if product.metafields.custom.spezifikation_material != blank or product.metafields.custom.spezifikation_inhalt != blank or product.metafields.custom.spezifikation_passform != blank %}     
        <div class="tab-2 tab">
          {% if  product.metafields.custom.spezifikation_material != blank %}
            <div class="">
              <div class="text">
                <p style="text-align: left !important">
                  Material:
                </p>
              </div>
              {{ product.metafields.custom.spezifikation_material | metafield_tag }}
            </div>
          {% endif %}
          {% if  product.metafields.custom.spezifikation_inhalt != blank %}
            <div class="">
              <div class="text">
                <p style="text-align: left !important">
                  Inhalt:
                </p>
              </div>
              {{ product.metafields.custom.spezifikation_inhalt | metafield_tag }}
            </div>
          {% endif %}
          {% if  product.metafields.custom.spezifikation_passform != blank %}
            <div class="">
              <div class="text">
                <p style="text-align: left !important">
                  Passform:
                </p>
              </div>
              {{ product.metafields.custom.spezifikation_passform | metafield_tag }}
            </div>
          {% endif %}  
        </div>
      {% endif %}
      {% if product.metafields.custom.tab_2 != blank %}
        <div class="tab-3 tab">
          {{ product.metafields.custom.tab_2 | metafield_tag }}
        </div>
      {% endif %}
      {% if product.metafields.custom.philosophie != blank %}
        <div class="tab-4 tab">
          {{ product.metafields.custom.philosophie | metafield_tag }}
        </div>
      {% endif %}
      {% comment %}<div class="tab-4 tab">

        {{ metaObject.title | metafield_tag }}
        {{ metaObject.text | metafield_tag }}

</div> {% endcomment %}
  

    </div>
    </div>
  </div>
</div>


